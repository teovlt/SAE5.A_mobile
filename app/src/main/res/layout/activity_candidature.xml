<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CandidatureActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_list_offres">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp">
        <ImageView
            android:id="@+id/retourCandidatures"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/left_arrow">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offre"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_title"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_item"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

      <TextView
           android:id="@+id/intitule"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:paddingStart="5dp"
          android:paddingEnd="5dp"
          android:text="Titre offre"
          android:textColor="@color/black"
          android:textSize="@dimen/textSize_mid" />

      <ImageButton
          android:id="@+id/developArrow"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:scaleType="fitCenter"
          android:background="#00000000"
          android:layout_gravity="top"
          android:contentDescription="@string/bouton_retour" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_box">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/etat_de_la_candidature"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/etat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Ã‰tat"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Date de relance"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_gravity="center"/>
    <TextView
        android:id="@+id/dateAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="date"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="50dp">
    <Button
        android:id="@+id/mettreajour"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="@string/mettre_jour"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/abandonCandidature"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:text="@string/abandonner_la_candidature" />
    </LinearLayout>
</LinearLayout>